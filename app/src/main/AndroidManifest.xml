<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="cn.endureblaze.kirby">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission
            android:name="android.permission.READ_LOGS"
            tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
            android:name=".Kirby"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup">
        <activity android:name=".res.cheatcode.CheatCodeActivity">
        </activity>
        <activity android:name=".res.gamelist.GameListActivity">
        </activity>
        <activity
                android:name=".Launcher"
                android:theme="@style/LauncherLoading">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".setting.SettingsActivity"/>
        <activity android:name=".base.BaseActivity"/>

        <provider
                android:name="cn.bmob.v3.util.BmobContentProvider"
                android:authorities="cn.endureblaze.kirby.BmobContentProvider"
                android:exported="false"
                tools:ignore="ExportedContentProvider"/>
    </application>

</manifest>